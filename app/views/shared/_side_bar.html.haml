.ChatSide
  .ChatSide__header
    .ChatSide__header__box
      %p.ChatSide__header__box__name
        = current_user.name
      %ul.ChatSide__header__box__menu
        %li.ChatSide__header__box__edit
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.ChatSide__header__box__NewGroup
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog') 
  .ChatSide__groups
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
